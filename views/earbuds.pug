extends layout

block content

  h1= title

  - let earbuds = results

  div(class = "container-fluid")

    div(class = "row m-1")
      each item in results
       - let destination1 = `dispatch(\"/earbuds/update?id=${item._id}\")`
       - let destination2 = `dispatch(\"/earbuds/create\")`
       - let destination3 = `dispatch(\"/earbuds/detail?id=${item._id}\")`
       - let destination4 = `dispatch(\"/earbuds/delete?id=${item._id}\")`
       div(class="col-sm-2") earbuds company:#{item.earbuds_company}, earbuds cost:#{item.earbuds_cost}, earbuds Colour:#{item.earbuds_Colour}
        button.btn( class="btn-primary ml-1", onclick= destination2) Create 
        button.btn( class="btn-primary ml-1", onclick= destination1) Update 
        button.btn( class="btn-primary ml-1", onclick= destination3) Detail
        button.btn( class="btn-primary ml-1", onclick= destination4) Delete

  script. 
    function buy(indexNum) {
      alert(`You purchased item ${indexNum}`);
    }
    function dispatch(path){ 
      window.location.href=path 
    }