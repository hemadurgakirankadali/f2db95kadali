extends layout

block content

  h1= title

  - let earbuds = results

  div(class = "container-fluid")

    div(class = "row m-1")
      each item in results
       - let destination = `dispatch(\"/earbuds/update?id=${item._id}\")`

       div(class="col-sm-2") earbuds company:#{item.earbuds_company}, earbuds colour:#{item.earbuds_colour}, earbuds cost:#{item.earbuds_cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
    script.
     function dispatch(path){
      window.location.href=path
     }